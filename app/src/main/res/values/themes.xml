<resources>
    <style name="Theme.FlexingNotes" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/magenta_600</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/magenta_400</item>
        <item name="colorSurface">@color/magenta_400</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/magenta_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
</resources>